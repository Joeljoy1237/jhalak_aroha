rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return true;
    }

    // Users Collection
    match /users/{userId} {
      allow read, write: if true;
    }

    // Registrations Collection (Solo Events)
    match /registrations/{userId} {
      allow read, write: if true;
    }

    // Teams Collection (Group Events)
    match /teams/{teamId} {
      allow read, write: if true;
    }

    // Counters for Chest Numbers
    match /counters/{eventId} {
      allow read, write: if true;
    }

    // Individual Registration Details (For Admin/Export)
    match /event_registrations/{regId} {
      allow read, write: if true;
    }

  }
}
